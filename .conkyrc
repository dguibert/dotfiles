# ~/.conkyrc
# Thayer Williams - http://cinderwick.ca
# vim:nu:ai:si:et:ts=4:sw=4:ft=conkyrc:

background no
#out_to_x no
out_to_console yes
update_interval 3
total_run_times 0
use_spacer none

#<fc=\#bbbbbb>${wireless_link_qual_perc wlan0}%  ${wireless_essid wlan0}</fc>  <fc=\#d94c3d>${upspeedf wlan0}k</fc>  <fc=\#a4bc51>${downspeedf wlan0}k</fc>

TEXT
${loadavg 1} \
${cpu cpu0}% ${freq_g 0}GHz \
${if_existing /sys/class/power_supply/BAT0/present}Bat ${battery_percent BAT0}% (${battery_time BAT0})${else}AC${endif} \
${if_up enp0s3}${upspeedf enp0s3}k ${downspeedf enp0s3}k${endif} \
${if_up bond0}${upspeedf bond0}k ${downspeedf bond0}k${endif} \
${time %H:%M}

